{
  "paths": {
    "prompt_reason": "Prompt/EN-Reasoning.txt",
    "prompt_critic": "Prompt/EN-Critical-High.txt"
  },
  "models": {
    "reasoning_model": {
      "hf_repo_id": "TheBloke/phi-2-GGUF",
      "hf_filename": "phi-2.Q4_K_M.gguf"
    },
    "critical_model": {
      "hf_repo_id": "microsoft/Phi-3-mini-4k-instruct-gguf",
      "hf_filename": "Phi-3-mini-4k-instruct-q4.gguf"
